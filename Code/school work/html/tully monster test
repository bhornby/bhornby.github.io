<script>
	function validate(){
		var x = document.forms["questions"]["answer1"].value;
		if(x == ""){
			document.getElementById("box").style.color="red";
		}
		else if (x == "35cm"){
			alert("Correct!");
		} else {
			alert("Wrong!")
		}
	}
</script>

